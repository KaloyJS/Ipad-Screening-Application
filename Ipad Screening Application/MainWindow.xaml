                                    <ComboBoxItem Content=""></ComboBoxItem>
                                    <ComboBoxItem Content="Silver"></ComboBoxItem>
                                    <ComboBoxItem Content="Grey"></ComboBoxItem>
                                    <ComboBoxItem Content="Gold"></ComboBoxItem>
                                </ComboBox>

                                <!-- FMIP lock 0 -->
